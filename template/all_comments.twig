{% extends "layout.twig" %}

{% block title %}
  {{ titleText }}
{% endblock %}

{% block content %}
  {% include 'message.twig' %}
  
    <div class="row">
      <div class="col-md-6">
          <h3>Все комментарии</h3>
      </div>
    </div>
   
    <div class="row">
      <div class="col-md-12">
        {% if allComments is not empty %}
          <ul class="media-list">
            {% for item in allComments %}
              <li class="media">
                <div class="media-left">
                    <img class="media-object avatar img-circle" src={% if userData["img"] != null %} "{{ userData["img"] }}" {% else %}"img/avatar/noavatar.png"  {% endif %} alt="">
                </div>
                <div class="media-body">
                    <h4 class="media-heading">{{userData["Name"]}} {{userData["Subname"]}}</h4>
                    <h5 class="gray_text">
                      К книге: <a href="book.php?book_id={{ item["book_id"] }}">{{ item["name"]}}</a>
                    </h5>
                    <h5 class="gray_text">
                      Вы писали: 
                    </h5>
                    <span>{{ item["comment"]|e|nl2br }}</span>
                </div>
              </li>
            {% endfor %}
          {% else %}
            <h4>
              Похоже, Вы еще не оставили комментариев
            </h4>
          {% endif %}
        </ul>
      </div>
      
    </div>

{% endblock %}
