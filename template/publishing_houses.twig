{% extends "layout.twig" %}

{% block title %}
  {{ titleText }}
{% endblock %}

{% block content %}
  {% include 'message.twig' %}
  <div class="row">
    <div class="col-md-6 text-left">
        <h3>
          Редактирование издательств
        </h3>
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-12 small_buttons_book">
       <form action="actions/add_publishing_house.php" method="post">
        <label>Добавление нового издательства в базу</label>
        <input type="text" class="form-control" id="new_publishing_house" name = "new_name" placeholder="Введите название добавляемого издательства" />
        <button type="submit" class="btn btn-success small_buttons_book btn-sm">Добавить</button>
      </form>
    </div>

    <div class="col-md-12 small_buttons_book">
       <form action="actions/delete_publishing_house.php" method="post">
          <label for="delete_publishing_house">Удаление издательства из базы</label>
          <input type="text" class="form-control" id="delete_publishing_house" name = "delete_name" placeholder="Введите название удаляемого издательства" />
          <button type="submit" class="btn btn-danger small_buttons_book btn-sm">Удалить</button>
      </form>
    </div>

    <div class="col-md-12 small_buttons_book">
       <form action="actions/rename_publishing_house.php" method="post">
         <label>Переименование издательства в базе</label>
         <div class="row">
           <div class="col-md-6">
            <input type="text" class="form-control" id="old_publishing_house" name = "old_name" placeholder="Введите изначальное название издательства" />
           </div>
           <div class="col-md-6">
            <input type="text" class="form-control" id="rename_publishing_house" name = "rename" placeholder="Введите новое название издательства" />
           </div> 
         </div>
         <button type="submit" class="btn btn-warning small_buttons_book btn-sm">Переименовать</button>
         
        </form>
    </div>
  </div>

{% endblock %}