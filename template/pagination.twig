<div class="row">
  <div class="col-md-6 col-md-offset-3 text-center">
    <ul class="pagination">
      <li {% if pointer == 'leftOff' or pointer == 'offAll' %} class="disabled" {% endif %}>
          <a {% if pointer == 'leftOff' or pointer == 'offAll'%} {% else %} href="{{ pageName }} {% if search is not empty %}&name={{ search }} {% endif %}"{% endif %}>
            «
          </a>
      </li>
      {% for page in pageList %}
        <li><a href="{{ pageName }}?page={{page}}{% if search is not empty %}&name={{ search }} {% endif %}">{{page}} </a></li>
      {% endfor %}
      <li {% if pointer == 'rightOff' or pointer == 'offAll' %} class="disabled" {% endif %}>
        <a {% if (pointer == 'rightOff') or (pointer == 'offAll') %} {% else %} href="{{ pageName }}?page={{ lastPage }}{% if search is not empty %}&name={{ search }} {% endif %}"{% endif %}>
          »
        </a>
      </li>
    </ul>
  </div>
</div>