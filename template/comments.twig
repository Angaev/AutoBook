<div class="row">
  <div class="col-md-7 comments">
    <div class="commentsCnt">
      <h3>
        Комментарии ({{ countComment }})
      </h3>
    </div>
    {% if isUserLogin %}
    <div class="comment ">
      <div class="row">
        <div class="col-md-2">
          <img src={% if userData["img"] == null %} "img/avatar/noavatar.png" {% else %} "{{ userData["img"] }}"{% endif %} class="img-responsive img-circle">
        </div>
        <div class="col-md-10">
            <form action="actions/add_comment.php" method="post">
              <div class="form-group">
                <textarea class="form-control" name="text" placeholder="Написать комментарий" required 
                rows="4"></textarea>
                <input type="hidden" name="book_id" value="{{ bookId }}"/>
              </div>
              <button type="submit" class="btn btn-primary pull-right">Отправить</button>
            </form>
        </div>
      </div>
    </div>
    {% endif %}
    
    {% for comment in commentsData %}
      <div class="comment">
        <div class="row">
          <div class="col-md-2">
            <img src={% if comment.img == null %} "img/avatar/noavatar.png" {% else %} "{{ userData["img"] }}"{% endif %} class="img-responsive img-circle">
          </div>
          <div class="col-md-10">
            <div class="userName ">
              <span> 
                {{ comment.Name }} {{ comment.Subname }} 
              </span>
              <span class="pull-right">
                {{ comment.date }}
              </span>
            </div>
            <div class="commentText">
              <span>{{ comment.comment|e|nl2br }}</span>
            </div>
          </div>
          {% if isUserAdmin %}
            <form action="actions/delete_comment.php" method="post">
              <input type="hidden" name="commentId" value="{{ comment.id }}">
              <input type="hidden" name="bookId" value="{{ comment.book_id }}">
              <button type="submit" class="btn btn-danger pull-right">Удалить</button>
            </form>
          {% endif %}
            
        </div>
      </div>
    {% endfor %}
    
  </div>
</div>